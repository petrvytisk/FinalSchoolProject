@model string
@{
    ViewData["Title"] = "Authentication";
}

<div class="container text-center">
    <h2>@Model</h3>
@if (User?.Identity?.IsAuthenticated ?? false)
{
        <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-danger">Odhlásit</a>
}
</div>
<div class="text-center my-4">
    <h1 class="display-3">Vítejte v OMS app</h1>
    <h2 class="display-6"> -> systému pro správu objednávek</h2>
</div>
