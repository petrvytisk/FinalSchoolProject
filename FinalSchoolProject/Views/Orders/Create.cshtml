@using FinalSchoolProject.DTO
@model OrderDTO
<div class="container">
	<h4>Vložit novou objednávku</h4>
	<form asp-controller="Orders" asp-action="Create">
		<div class="row">
			<div class="col">
				<label asp-for="CustomerId">Název společnosti:</label>		@*SELECT - VIEWBAG*@
				<input type="text" asp-for="Title" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="TotalPrice">Celková cena:</label>
				<input type="number" asp-for="TotalPrice" class="form-control" />
			</div>
		</div>
		<div class="row">
			<div class="col">
				<label asp-for="Accepted">Přijato:</label>
				<input type="date" asp-for="Accepted" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="Deadline">Termín:</label>
				<input type="date" asp-for="Deadline" class="form-control" />
			</div>
		</div>
		<div>
			<label asp-for="Status">Status:</label>		@*SELECT - VIEWBAG*@
			<input type="text" asp-for="Status" class="form-control" />
		</div>
		<div>
			<label asp-for="Title">Předmět:</label>
			<input type="text" asp-for="Title" class="form-control" />
		</div>
		<div>
			<label asp-for="Description">Podrobnosti:</label>
			<textarea asp-for="Description" class="form-control" id="story" name="story" rows="5" cols="33">
		Zde můžete napsat všechny podrobnosti k objednávce...
		</textarea>
		</div>
		<div class="row">
			<div class="col">
				<label asp-for="PriceOfferNum">Cenová nabídka č:</label>
				<input type="text" asp-for="PriceOfferNum" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="DeliveryNoteNum">Dodací list č:</label>
				<input type="text" asp-for="DeliveryNoteNum" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="InvoiceNum">Faktura č:</label>
				<input type="text" asp-for="InvoiceNum" class="form-control" />
			</div>
		</div>

		<div>
			<input class="btn btn-success" type="submit" value="Create" />
		</div>
	</form>
</div>

