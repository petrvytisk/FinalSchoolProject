@using FinalSchoolProject.DTO
@model OrderDTO
<div class="container">
	<h4>Vložit novou objednávku</h4>
	<form asp-controller="Orders" asp-action="Create">
		<div>
			<label asp-for="Customer.CompanyName"></label>		@*SELECT - VIEWBAG*@
			<input type="text" asp-for="Title" class="form-control" />
		</div>
		<div class="row">
			<div class="col">
				<label asp-for="Accepted"></label>
				<input type="date" asp-for="Accepted" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="Deadline"></label>
				<input type="date" asp-for="Deadline" class="form-control" />
			</div>
		</div>
		<div>
			<label asp-for="Status"></label>		@*SELECT - VIEWBAG*@
			<input type="text" asp-for="Status" class="form-control" />
		</div>
		<div>
			<label asp-for="Title"></label>
			<input type="text" asp-for="Title" class="form-control" />
		</div>
		<div>
			<label asp-for="Description"></label>
			<textarea asp-for="Description" class="form-control" id="story" name="story" rows="5" cols="33">
		It was a dark and stormy night...
		</textarea>
		</div>
		<div class="row">
			<div class="col">
				<label asp-for="PriceOffer"></label>
				<input type="text" asp-for="PriceOffer" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="DeliveryNote"></label>
				<input type="text" asp-for="DeliveryNote" class="form-control" />
			</div>
			<div class="col">
				<label asp-for="Invoice"></label>
				<input type="text" asp-for="Invoice" class="form-control" />
			</div>
		</div>
		<div>
			<label asp-for="TotalPrice"></label>
			<input type="number" asp-for="TotalPrice" class="form-control" />
		</div>
		<div>
			<input class="btn btn-success" type="submit" value="Create" />
		</div>
	</form>
</div>

