@using FinalSchoolProject.DTO
@model IEnumerable<OrderDTO>
<div>
    <div class="row">
        <div class="col-5">
            <h3>Přehled všech objednávek</h3>
        </div>
        <div class="col-2">
            <a class="btn btn-success" asp-action="Create">Create</a>
        </div>
        <div class="col-3"></div>
    </div>
</div>

<div class="row">
    <div class="col-1">
        <h6>ID</h6>
    </div>
    <div class="col-2">
        <h6>PŘIJATO</h6>
    </div>
    <div class="col-2">
        <h6>TERMÍN</h6>
    </div>
    <div class="col-2">
        <h6>ZBÝVÁ DNŮ</h6>
    </div>
    <div class="col-10">
        <h6>PŘEDMĚT OBJEDNÁVKY</h6>
    </div>
    <div class="col-3">
        <h6>CENA</h6>
    </div>
    <div class="col-2">
        <h6>DETAIL</h6>
    </div>
    <div class="col-2">
        <h6>SMAZAT</h6>
    </div>
</div>
<hr />
@foreach (var item in Model)
{
    <div class="row">
        <div class="col-1">
            <p>@item.Id</p>
        </div>
        <div class="col-3">
            <p>@item.Accepted.ToShortDateString()</p>
        </div>
        <div class="col-3">
            <p>@item.Deadline.ToShortDateString()</p>
        </div>
        <div class="col-2">
            <p>@item.DaysLeft</p>
        </div>
        <div class="col-10">
            <p>@item.Title</p>
        </div>
        <div class="col-3">
            <p>@item.TotalPrice</p>
        </div>
        <div class="col-1">
            <a class="btn btn-warning" asp-action="Edit" asp-route-id=@item.Id>Edit</a> @*bude chtít doladit*@
        </div>
        <div class="col-1">
            <form style="display:inline" method="post">
                @*bude chtít doladit*@
                <input class="btn btn-danger" asp-action="Delete" asp-route-id=@item.Id type="submit" value="Delete" />
            </form>
        </div>
        <hr />
    </div>
}




