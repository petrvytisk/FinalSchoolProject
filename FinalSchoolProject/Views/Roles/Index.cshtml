@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
	ViewData["Title"] = "ROLES";
}

<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-3">
	<h1>Všechny role</h1>
		<a asp-action="Create" class="btn btn-sm btn-success success-action-btn">Nová role</a>
	</div>
	<table class="table table-striped table-sm">
		<tr>
			<th>Název role</th>
			<th>Upravit</th>
			<th>Smazat</th>
			<th>ID</th>
		</tr>
		@foreach (var role in Model)
		{
			<tr>
				<td>@role.Name</td>
				<td>
					<a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@role.Id">Upravit</a>
				</td>
				<td>
					<form asp-action="Delete" asp-route-id="@role.Id"
						  method="post">
						<button type="submit" class="btn btn-sm btn-danger">Smazat</button>
					</form>
				</td>
				<td>@role.Id</td>
			</tr>
		}
	</table>
</div>