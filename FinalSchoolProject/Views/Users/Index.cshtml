@using FinalSchoolProject.ViewModels
@model IEnumerable<AppUser>
@{
	ViewData["Title"] = "READ USER";
}
<div class="container">
	<h3>Uživatelé</h3>
	@*tlačítko pro vytvoření nového uživatele*@
	<a asp-action="Create" class="btn btn-secondary mb-2">Nový uživatel</a>
	@*tabulka bude mít vyznačené okraje*@
	<table class="table table-sm table-bordered">
		@*definice prvního řádku tabulky s nadpisy sloupců (budou tučně)*@
		@*<tr> = table row*@
		<tr>
			@*<th> = table header*@
			<th>ID</th>
			<th>Name</th>
			<th>Email</th>
			<th>Update</th>
			<th>Delete</th>
		</tr>
		@*rozdělení vlastností uživatele do jednotlivých buněk tabulky - držíme se
schématu z table headeru - id, name, email, tlačítka pro update a delete*@
		@foreach (AppUser user in Model)
		{
			<tr>
				<td>@user.Id</td> @*<td> = table data*@
				<td>@user.UserName</td>
				<td>@user.Email</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id"> Upravit</a>
				</td>
				<td>
					<form asp-action="Delete" asp-route-id="@user.Id" method="post">
						<button type="submit" class="btn btn-sm btn-danger">
							Smazat
						</button>
					</form>
				</td>
			</tr>
		}
	</table>
</div>