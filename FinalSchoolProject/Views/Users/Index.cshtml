@using FinalSchoolProject.ViewModels
@model IEnumerable<AppUser>
@{
	ViewData["Title"] = "READ USER";
}
<div class="container">
	<div class="d-flex justify-content-between align-items-center mb-3">
	<h1>Uživatelé</h1>
	@*tlačítko pro vytvoření nového uživatele*@
		<a asp-action="Create" class="btn btn-sm btn-success success-action-btn">Nový uživatel</a>
	</div>
	@*tabulka bude mít vyznačené okraje*@
	<table class="table table-striped table-sm">
		@*definice prvního řádku tabulky s nadpisy sloupců (budou tučně)*@
		@*<tr> = table row*@
		<tr>
			@*<th> = table header*@
			<th>ID</th>
			<th>Jméno</th>
			<th>E-mail</th>
			<th>Upravit</th>
			<th>Smazat</th>
		</tr>
		@*rozdělení vlastností uživatele do jednotlivých buněk tabulky - držíme se
schématu z table headeru - id, name, email, tlačítka pro update a delete*@
		@foreach (AppUser user in Model)
		{
			<tr>
				<td>@user.Id</td> @*<td> = table data*@
				<td>@user.UserName</td>
				<td>@user.Email</td>
				<td>
					<a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id"> Upravit</a>
				</td>
				<td>
					<form asp-action="Delete" asp-route-id="@user.Id" method="post">
						<button type="submit" class="btn btn-sm btn-danger">
							Smazat
						</button>
					</form>
				</td>
			</tr>
		}
	</table>
</div>